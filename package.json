{
  "name": "alignuk",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:netlify": "next build --no-lint && cp -r public/* .next/",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:validation": "tsx scripts/runValidationTests.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:visual": "percy exec -- playwright test --grep @visual",
    "test:visual:update": "percy exec -- playwright test --grep @visual --update-snapshots",
    "test:all": "npm run test && npm run test:e2e",
    "test:visual:analysis": "npm run test:visual && node scripts/generate-visual-analysis.js",
    "test:visual:headed": "playwright test --grep @visual --headed",
    "playwright:install": "playwright install",
    "playwright:codegen": "playwright codegen http://localhost:3001"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "dotenv": "^17.2.1",
    "framer-motion": "^10.16.4",
    "lucide-react": "^0.541.0",
    "next": "14.2.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.8.0"
  },
  "devDependencies": {
    "@percy/cli": "^1.27.4",
    "@playwright/test": "^1.40.1",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-config-next": "14.2.32",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "tsx": "^4.20.5",
    "typescript": "^5.2.2"
  }
}
